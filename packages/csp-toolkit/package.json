{
    "name": "csp-toolkit",
    "version": "1.1.0",
    "author": {
        "name": "Tsotne Gvadzabia"
    },
    "description": "A comprehensive toolkit for working with Content Security Policy (CSP) directives in TypeScript.",
    "scripts": {
        "build": "rollup -c",
        "test": "vitest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tsotimus/csp",
        "directory": "packages/csp-toolkit"
    },
    "homepage": "https://vite-csp.tsotne.co.uk",
    "license": "GPL-3.0-only",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.esm.js",
            "require": "./dist/index.cjs.js" 
        },
        "./server": {
            "types": "./dist/node/node.d.ts",
            "import": "./dist/node/node.esm.js",
            "require": "./dist/node/node.cjs.js"
        }
    },
    "type": "module",
    "types": "dist/index.d.ts",
    "typings": "dist/index.d.ts",
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "devDependencies": {
        "@repo/eslint-config": "workspace:^",
        "@repo/typescript-config": "workspace:^",
        "@rollup/plugin-commonjs": "^26.0.1",
        "@rollup/plugin-node-resolve": "^16.0.0",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.2",
        "@types/node": "^20.14.2",
        "rollup": "^4.18.0",
        "vitest": "^1.6.0"
    },
    "files": [
        "dist",
        "LICENSE"
    ],
    "keywords": [
        "csp",
        "security",
        "content-security-policy",
        "types",
        "toolkit"
    ]
}